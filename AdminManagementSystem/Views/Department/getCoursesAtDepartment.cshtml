@model List<Department_Course>

@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/AdminManagementSystem.styles.css" asp-append-version="true" />


<style>
    .course-table-container {
        font-family: Arial, sans-serif;
        max-width: 800px;
        background-color: #f9f9f9;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .course-table {
        width: 100%;
        border-collapse: collapse;
    }

        .course-table th,
        .course-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        .course-table th {
            background-color: #4a4a4a;
            color: white;
            font-weight: bold;
        }

        .course-table tr:last-child td {
            border-bottom: none;
        }

        .course-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .course-table tr:hover {
            background-color: #e6e6e6;
        }

        .course-table td:first-child {
            font-weight: bold;
            color: #333;
            width: 50px;
        }

        .course-table td:nth-child(4) {
            text-align: right;
        }
</style>

<div class="course-table-container">
    <table class="course-table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Instructor</th>
                <th>GPA</th>
            </tr>
        </thead>
        <tbody>
            @{
                int start = 1;
            }
            @foreach (Department_Course item in Model)
            {
                <tr>
                    <td>@start</td>
                    <td>@item.Course_ref.CourseName</td>
                    <td>@item.Course_ref.Instructor</td>
                    <td>@item.Course_ref.Gpa</td>
                </tr>
                start++;
            }
        </tbody>
    </table>
</div>





