@model StudentInformationVM



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Card</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>

        .profile-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            max-width: 380px;
            width: 100%;
            transition: transform 0.3s ease;
        }

            .profile-card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            padding: 10px;
            text-align: center;
            border-bottom: none;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 5px solid rgba(255, 255, 255, 0.9);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            margin: -25px auto 15px;
            position: relative;
            overflow: hidden;
        }

            .profile-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

            .profile-image:hover img {
                transform: scale(1.1);
            }

        .edit-image-icon {
            position: absolute;
            bottom: -10px;
            right: 50px;
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid white;
            opacity: 1;
        }

/*         .profile-image:hover .edit-image-icon {
            opacity: 1;
        } */

        .edit-image-icon:hover {
            background: linear-gradient(45deg, #2a4c8c, #d12e2e);
            transform: scale(1.1);
        }
        .card-body {
            padding: 30px;
        }

        .info-item {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
            padding: 5px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
        }

            .info-item:hover {
                background: rgba(26, 42, 108, 0.1);
                transform: translateX(5px);
            }

        .info-icon {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            border-radius: 8px;
            margin-right: 15px;
            font-size: 1rem;
        }

        .info-label {
            font-weight: 600;
            color: #1a2a6c;
            margin-bottom: 2px;
            font-size: 0.9rem;
        }

        .info-value {
            color: #666;
            font-size: 1rem;
        }

        .department-badge {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            display: inline-block;
            margin-top: 10px;
        }

        .department {
            font-weight:bold;
        }

        .button{
            display:flex;
            justify-content:space-between;
            margin-top:25px;
        }

        .button a{
            display:block;
            text-decoration:none;
            padding:10px 20px;
            color:white;
            font-weight:bold;
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            margin:0px 10px;
            border-radius:10px;
            cursor:pointer;
        }

            .button a:hover{
                    background: linear-gradient(45deg, #2a4c8c, #d12e2e)
            }
    </style>
</head>
<body>
    <div class="profile-card">
        <div class="card-header">
            <div class="profile-image">                             
                    <img src="/Images/StudentImage/@Model.Image" alt="Profile Picture">
@*                 <a asp-action="UpdateStudentImage" asp-route-id="@Model.Id" asp-controller="Student" class="edit-image-icon">
                    <i class="fas fa-camera"></i>
                </a> *@
                <form id="imageUploadForm" asp-action="UpdateStudentImage" asp-controller="Student" asp-route-id="@Model.Id" method="post">
                    <input type="file" id="imageInput" name="imageFile" accept="image/*" style="display: none;" onchange="handleImageSelect(event)">
                    <input type="hidden" id="imageNameInput" name="imageName" />
                    <label for="imageInput" class="edit-image-icon">
                        <i class="fas fa-camera"></i>
                    </label>
                </form>
            </div>
            <div class="department-badge">
                <i class="fas fa-laptop-code me-2"></i><span class="department">@Model.Department</span>
            </div>
        </div>

        <div class="card-body">
            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <div class="info-label">Name</div>
                    <div class="info-value">@Model.Name</div>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div>
                    <div class="info-label">Age</div>
                    <div class="info-value">@Model.Age</div>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-venus-mars"></i>
                </div>
                <div>
                    <div class="info-label">Gender</div>
                    <div class="info-value">@Model.gender</div>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div>
                    <div class="info-label">City</div>
                    <div class="info-value">@Model.City</div>
                </div>
            </div>

            <div class="button">
                <a asp-action="getAllStudent" asp-controller="Student">Back</a>
                <a asp-action="UpdateStudentData" asp-route-id="@Model.Id" asp-controller="Student">Edit</a>
            </div>

        </div>
    </div>

   <script>
function handleImageSelect(event) {
    try {
        // Get the selected file
        const file = event.target.files[0];
        
        if (file) {
            // Validate file type
            const validImageTypes = ['image/jpeg', 'image/png', 'image/gif'];
            if (!validImageTypes.includes(file.type)) {
                alert('Please select a valid image file (JPEG, PNG, or GIF)');
                event.target.value = '';
                return;
            }

            // Get file name and set it in hidden input
            const fileName = file.name;
            const imageNameInput = document.getElementById('imageNameInput');
            if (imageNameInput) {
                imageNameInput.value = fileName;
            } else {
                console.error('imageNameInput not found');
                return;
            }

            // Create FileReader for preview
            const reader = new FileReader();
            
            reader.onload = function(e) {
                const form = document.getElementById('imageUploadForm');
                if (form) {
                    form.submit();
                } else {
                    console.error('imageUploadForm not found');
                }
            };

            reader.onerror = function(error) {
                console.error('Error reading file:', error);
                alert('Error reading file. Please try again.');
            };

            // Read the file
            reader.readAsDataURL(file);
        }
    } catch (error) {
        console.error('Error in handleImageSelect:', error);
        alert('An error occurred while processing the image. Please try again.');
    }
}
</script>
</body>
</html>




