@model StudentInformationVM



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Card</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>

        .profile-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            max-width: 380px;
            width: 100%;
            transition: transform 0.3s ease;
        }

            .profile-card:hover {
                transform: translateY(-5px);
            }

        .card-header {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            padding: 10px;
            text-align: center;
            border-bottom: none;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 5px solid rgba(255, 255, 255, 0.9);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            margin: -25px auto 15px;
            position: relative;
            overflow: hidden;
        }

            .profile-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

            .profile-image:hover img {
                transform: scale(1.1);
            }

        .card-body {
            padding: 30px;
        }

        .info-item {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
            padding: 5px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
        }

            .info-item:hover {
                background: rgba(26, 42, 108, 0.1);
                transform: translateX(5px);
            }

        .info-icon {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            border-radius: 8px;
            margin-right: 15px;
            font-size: 1rem;
        }

        .info-label {
            font-weight: 600;
            color: #1a2a6c;
            margin-bottom: 2px;
            font-size: 0.9rem;
        }

        .info-value {
            color: #666;
            font-size: 1rem;
        }

        .department-badge {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            display: inline-block;
            margin-top: 10px;
        }

        .department {
            font-weight:bold;
        }

        .button{
            display:flex;
            justify-content:space-between;
            margin-top:10px;
        }

        .button a{
            display:block;
            text-decoration:none;
            padding:10px 20px;
            color:white;
            font-weight:bold;
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            margin:0px 10px;
            border-radius:10px;
            cursor:pointer;
        }

            .button a:hover{
                    background: linear-gradient(45deg, #2a4c8c, #d12e2e)
            }
    </style>
</head>
<body>
    <div class="profile-card">
        <div class="card-header">
            <div class="profile-image">                             
                    <img src="/Images/StudentImage/@Model.Image" alt="Profile Picture">            
            </div>
            <div class="department-badge">
                <i class="fas fa-laptop-code me-2"></i><span class="department">@Model.Department</span>
            </div>
        </div>

        <div class="card-body">
            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <div class="info-label">Name</div>
                    <div class="info-value">@Model.Name</div>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div>
                    <div class="info-label">Age</div>
                    <div class="info-value">@Model.Age</div>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-venus-mars"></i>
                </div>
                <div>
                    <div class="info-label">Gender</div>
                    <div class="info-value">@Model.gender</div>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div>
                    <div class="info-label">City</div>
                    <div class="info-value">@Model.City</div>
                </div>
            </div>

            <div class="button">
                <a asp-action="getAllStudent" asp-controller="Student">Back</a>
                <a asp-action="UpdateStudentData" asp-route-id="@Model.Id" asp-controller="Student">Edit</a>
            </div>

        </div>
    </div>
</body>
</html>




