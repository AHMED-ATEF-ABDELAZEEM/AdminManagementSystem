 @model List<Student>

@{
    Layout = "_MyLayout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<style>
    /* Style for the table */
    .student-table {
        width: 100%;
        border-collapse: collapse;
        border:none;
        margin-bottom: 20px;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius:50px;
    }

        .student-table th,
        .student-table td {
            padding: 8px 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .student-table th {
            background-color: #954a4a;
            font-weight: bold;
            border:none;
            color: #fff;
        }

        .student-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .student-table tr:hover {
            background-color: #ddd;
        }

        /* Style for action links in the table */
        .student-table a {
            text-decoration: none;
            color: slateblue;           
            font-weight: bold;
        }

            .student-table a:hover {
                text-decoration: underline;
            }

    /* Style for the "Add New Student" button */
    .add-student-btn {
        background: linear-gradient(45deg, #1a2a6c, #b21f1f);
        color: #fff;
        font-weight:bold;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin-top: 20px;
        transition: background-color 0.3s;
        float: right;
    }

        .add-student-btn:hover {
            background: linear-gradient(45deg, #2a4c8c, #d12e2e);
        }

    /* Container for the table and button */
    .student-container {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 5px;
    }

    .student-table .DeleteIcon {
        color:red;
    }
</style>

<div class="student-container">
    <table class="student-table">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>City</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int start = 1;
            }
            @foreach (Student student in Model)
            {
                <tr>
                    <td>@start</td>
                    <td>@student.StudentName</td>
                    <td>@student.Age</td>
                    <td>@student.gender</td>
                    <td>@student.City</td>
                    <td><a asp-controller="Student" asp-action="ShowStudentMark" asp-route-StudentId="@student.StudentId"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-controller="Student" asp-action="getInformationAboutStudent" asp-route-id="@student.StudentId"><i class="fas fa-info-circle fa-lg"></i></a></td>
                    <td><a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@student.StudentId" class="DeleteIcon"> <i class="fas fa-trash-alt fa-lg"></i></a></td>
                </tr>
                start++;
            }
        </tbody>
    </table>

    <a asp-action="AddNewStudent" asp-controller="Student" class="add-student-btn">Add New Student</a>
</div>






