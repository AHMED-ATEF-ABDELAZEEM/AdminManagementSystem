@model AddCourseAndAssignToDepartmentVM


<form asp-action="SaveNewCourse" method="post" class="Container">

    <h2>Add New Course</h2>

    <!-- Course Name -->
    <div class="form-group">
        <label asp-for="NewCourse.CourseName" class="control-label"></label>
        <input asp-for="NewCourse.CourseName" class="form-control" />
        <span asp-validation-for="NewCourse.CourseName" class="text-danger"></span>
    </div>
    <!-- Instructor -->
    <div class="form-group">
        <label asp-for="NewCourse.Instructor" class="control-label"></label>
        <input asp-for="NewCourse.Instructor" class="form-control" />
        <span asp-validation-for="NewCourse.Instructor" class="text-danger"></span>
    </div>

    <!-- GPA -->
    <div class="form-group">
        <label asp-for="NewCourse.Gpa" class="control-label"></label>
        <input asp-for="NewCourse.Gpa" class="form-control" type="number"/>
        <span asp-validation-for="NewCourse.Gpa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Departments">Select Departments : </label>
        <br />
        @foreach (var department in Model.Departments)
        {
            <div class="form-check">
                <input type="checkbox" name="AssignToDepartment" value="@department.DepartmentId" id="department-@department.DepartmentId"/>
                <label for="department-@department.DepartmentId" class="form-check-label">@department.DepartmentName</label>
            </div>
        }
        <span asp-validation-for="AssignToDepartment" class="text-danger"></span>
    </div>

    <div class="button">
        <a asp-action="Index" asp-controller="Course">Back</a>
        <button type="submit" class="btn btn-primary">Create Course</button>
    </div>
</form>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



