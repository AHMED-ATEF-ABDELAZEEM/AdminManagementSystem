

@model List<Course>

@{
	Layout = "_CourseLayout";
}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/AdminManagementSystem.styles.css" asp-append-version="true" />

<style>
    .department-info {
        font-family: Arial, sans-serif;
        width: 100%;
        background-color: #f9f9f9;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        min-height: 250px;
    }

        .department-info h3 {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            margin: 0;
            padding: 15px;
            font-size: 1.2em;
        }

        .department-info table {
            width: 100%;
            border-collapse: collapse;
        }

        .department-info td {
            padding: 12px 15px;
            border-bottom: 1px solid #e0e0e0;
        }

        .department-info tr:last-child td {
            border-bottom: none;
        }

        .department-info tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .department-info td:first-child {
            font-weight: bold;
            color: #333;
        }

        .department-info td:last-child {
            text-align: right;
        }
</style>

<div class="department-info">
    <h3>Course : @ViewBag.FirstCourseInformation.CourseName</h3>
    <table>
        <tr>
            <td>Instructor</td>
            <td>@ViewBag.FirstCourseInformation.Instructor</td>
        </tr>
        <tr>
            <td>Gpa</td>
            <td>@ViewBag.FirstCourseInformation.Gpa</td>
        </tr>
        <tr>
            <td>Number of Department</td>
            <td>@ViewBag.FirstCourseInformation.Department_Course_ref.Count</td>
        </tr>
        <tr>
            <td>Number of Students</td>
            <td>@ViewBag.FirstCourseInformation.Student_Course_ref.Count</td>
        </tr>
        <tr>
            <td>Male Students</td>
            <td>@ViewBag.CountOfMaleStudent</td>
        </tr>
        <tr>
            <td>Female Students</td>
            <td>@ViewBag.CountOfMaleStudent</td>
        </tr>
    </table>
</div>



















