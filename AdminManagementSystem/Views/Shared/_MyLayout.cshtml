<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminManagementSystem.styles.css" asp-append-version="true" />
    <title>Admin Management System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f0f0f0;
        }

        header {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom-right-radius:10px;
            border-bottom-left-radius:10px;

        }

            header h1 {
                margin: 0;
                font-size: 1.2rem;
            }

        nav ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            nav ul li {
                display: inline;
                margin-right: 1rem;
            }

                nav ul li a {
                    color: white;
                    text-decoration: none;
                    padding: 0.5rem;
                    transition: background-color 0.3s;
                }

                    nav ul li a:hover {
                        background-color: #34495e;
                        border-radius: 4px;
                    }

        main {
            flex-grow: 1;
            padding: 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }


        footer {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f);
            color: white;
            text-align: center;
            padding: 5px;
            font-size: 0.9rem;
        }
        
    </style>
</head>
<body>
    <header>
        <h1>Admin Management System</h1>
        @if(User.Identity.IsAuthenticated)
        {
            <nav>
                <ul>
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    @if(User.IsInRole("Super Admin"))
                    {
                       <li><a asp-action="getAllAcounts" asp-controller="Acount">Management</a></li>
                    }
                    <li><a asp-action="getAcountInformation"  asp-controller="Acount">MyAccount</a></li>
                    <li><a asp-action="Logout" asp-controller="Acount">Logout</a></li>
                </ul>
            </nav>
        }

    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>Created by Eng : AHMED ATEF</p>
        <p>Contact : ahmedatefabdelazeem@gmail.com</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
