@model ChangePasswordVM


<div class="Box">
    <h3>Change Password</h3>
    <hr />
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label">Enter Current Password</label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Enter New Password</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label">Confirm New Password</label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="buttons">
                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="getAcountInformation" asp-controller="Acount" class="btn btn-success">Back</a>
                </div>
            </div>

        </form>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
